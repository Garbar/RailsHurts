!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/

    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Rails hurts"

    %link{ :rel=> "shortcut icon", :type => "image/png", :href => "/images/icon.png"}
    = stylesheet_link_tag "bootstrap.min", "likely"
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.4.min.js"
    = javascript_include_tag  "all", "bootstrap.min", "likely"

  %body{:class => page_classes}
    .container{:style => "width: 600px"}
      .text-center
        %br/
        %br/
        %a{:href => "/"}
          %img.center-block{:src => "/images/site-logo.png", :width => "60px"}/
          %h5{:style => "text-align: center;"}
            RAILS HURTS

        %br/
      = yield

      :plain
        <div class="text-center">
          <br/>
          <button class="show-comments btn btn-default btn-xs">I have something to say!</button>
        </div>

        <!-- The empty element required for Disqus to loads comments into -->
        <div id="disqus_thread"></div>


        <div class="text-center">
          <br/>
          <div class="likely">
            <div class="twitter" data-via="railshurts">Tweet</div>
            <div class="facebook">Share</div>
            <div class="gplus">Plus</div>
          </div>
        </div>

        <script type="text/javascript">
            $(document).ready(function() {
                $('.show-comments').on('click', function(){
                      var disqus_shortname = 'railshurts'; // Replace this value with *your* username.

                      // ajax request to load the disqus javascript
                      $.ajax({
                              type: "GET",
                              url: "http://" + disqus_shortname + ".disqus.com/embed.js",
                              dataType: "script",
                              cache: true
                      });
                      // hide the button once comments load
                      $(this).fadeOut();
                });
            });

        </script>

      %br/
      .text-center
        / Begin MailChimp Signup Form
        %h4 Get notified about new posts:
        #get-free-chapter
          %form#mc-embedded-subscribe-form.validate{:action => "//nemytchenko.us8.list-manage.com/subscribe/post?u=eac87c13e320dbac697422aa7&id=a3d703793a&topic=posts", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank"}
            #mc_embed_signup_scroll
              / real people should not fill this in and expect good things - do not remove this or risk form bot signups
              %div{:style => "position: absolute; left: -5000px;"}
                %input{:name => "b_eac87c13e320dbac697422aa7_a3d703793a", :tabindex => "-1", :type => "text", :value => ""}/
              #mce-responses.clear
                #mce-error-response.response{:style => "display:none"}
                #mce-success-response.response{:style => "display:none"}
              %input#mce-EMAIL.required.email{:name => "EMAIL", :type => "email", :value => "", :placeholder => "Email address"}/
              %input#mc-embedded-subscribe.btn.btn-default.btn-xs{:name => "subscribe", :type => "submit", :value => "Subscribe"}/
        %br/
        %a{:href => "http://twitter.com/RailsHurts"}
          %img.center-block{:src => "/images/ruby-patched.png", :width => "60px"}/
          Follow @RailsHurts
      %br/
      %br/

